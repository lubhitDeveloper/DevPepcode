extends base.pug
block content
    .contact-parent
        .contact-child-form
            form(action='')
                .input
                    .input-heading
                        | Name
                    input#name(type='text' name='name' placeholder='Your Name' required='')
                .input
                    .input-heading
                        | Email
                    input#email(type='email' name='email' placeholder='Your Email' required='')
                .input
                    .input-heading
                        | Password
                    input#password(type='password' name='password' placeholder='Your Password' required='')
                .input
                    .input-heading
                        | Confirm Password
                    input#confirm-password(type='password' name='confirm-password' required='')    
                .button-contact
                    input#submit(type='submit' value='Sign Up')
block scripts
 script(src="./js/signup.js")